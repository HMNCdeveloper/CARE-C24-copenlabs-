<Window x:Class="HS5.Analysis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wag="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:HS5.Resources.Idiomas"   
        mc:Ignorable="d"
        Width="450"
        Height="350"
        Title="Analysis">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{x:Static local:Lenguaje.lblAnalysis}" VerticalAlignment="Stretch" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" Margin="0 5" FontSize="16"></Label>
        <Image x:Name="GifAnalysis" wag:ImageBehavior.AnimatedSource="Resources/analisis-hombre.gif" HorizontalAlignment="Stretch" Grid.Row="1" Margin="20"></Image>
        <ProgressBar x:Name="progressBar" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5" Height="25" Background="Black"></ProgressBar>
    </Grid>
</Window>
