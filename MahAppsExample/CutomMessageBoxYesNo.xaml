<Window x:Class="HS5.CustomMessageBoxYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Icon="Resources/CopenIcon.ico"
        xmlns:local="clr-namespace:HS5"
        mc:Ignorable="d"
        Title="Confirmación de cancelación" Height="150" Width="300">
    <Grid>
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-20,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Aceptar" Width="100" Click="Aceptar_Click" Background="#FF3CB3DF" Foreground="#FFF" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Width="100" Click="Cancelar_Click" Background="#FF3CB3DF" Foreground="#FFF"/>
        </StackPanel>
    </Grid>
</Window>